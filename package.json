{
  "name": "stream-sac",
  "version": "2.1.0",
  "description": "Utility functions",
  "license": "CC0-1.0",
  "type": "module",
  "main": "source/html/escapeHtmlStream.js",
  "scripts": {
    "test": "ava",
    "test-verbose": "ava --verbose",
    "lint-fix": "eslint --ignore-path .gitignore --fix .",
    "lint": "eslint --ignore-path .gitignore .",
    "bundle": "rollup --config tools/rollup.config.js",
    "prepublishOnly": "npm t && npm run bundle"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^2.1.0",
    "html-escaper": "^3.0.3",
    "into-stream": "^7.0.0",
    "is-whitespace-character": "^2.0.1",
    "multistream": "^4.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "ava": "^3.15.0",
    "eslint": "^8.4.1",
    "eslint-config-red": "^1.8.2",
    "rollup": "^2.61.1"
  },
  "eslintConfig": {
    "extends": [
      "red"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {}
    },
    "env": {
      "es2021": true,
      "browser": true,
      "node": true
    }
  },
  "ava": {
    "nodeArguments": [
      "--experimental-modules"
    ],
    "files": [
      "tests/specification/**"
    ]
  },
  "files": [
    "source",
    "built",
    "readme.md",
    "license.txt",
    "changelog.md"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/GrosSacASac/stream-sac.git"
  },
  "keywords": [
    "stream",
    "concat",
    "string",
    "html",
    "minify"
  ]
}
